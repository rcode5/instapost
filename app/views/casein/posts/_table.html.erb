<!-- Scaffolding generated by Casein v5.0.1.0 -->

<table class="table table-striped table-hover table-condensed">
	<thead>
		<tr>
			<th></th>
			<th><%= casein_sort_link "Note", :note %></th>
			<th>&nbsp;</th>
			<th>&nbsp;</th>
		</tr>
	</thead>
	
	<% posts.each do |post| %>
		<tr>
			<td class="image thumb">
        <%- if post.image? %>
        <%= link_to image_tag(post.image.url(:thumb)), casein_post_path(post) %>
        <%- else %>
        <%= link_to casein_post_path(post) do %>
          <i class="glyphicon glyphicon-ban-circle"></i>
          No Image
        <%-   end %>
        <%- end %>
      </td>
			<td><%= casein_table_cell_link post.note, casein_post_path(post) %></td>
			<td class="delete">
				<%= link_to(casein_show_row_icon("trash"), casein_post_path(post), :method => :delete, :data => { :confirm => "Are you sure you want to delete this post?" }) %>
			</td>
		</tr>
	<% end %>
</table>
