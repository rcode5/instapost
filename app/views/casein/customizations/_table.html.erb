<!-- Scaffolding generated by Casein v5.0.1.0 -->

<table class="table table-striped table-hover table-condensed">
	<thead>
		<tr>
			<th><%= casein_sort_link "Color", :color %></th>
			<th><%= casein_sort_link "Font", :font %></th>
			<th>&nbsp;</th>
		</tr>
	</thead>
	
	<% customizations.each do |customization| %>
		<tr>
			<td class="color" style="background-color: <%= customization.color_value %>"><%= casein_table_cell_link customization.color, casein_customization_path(customization) %></td>
			<td><%= casein_table_cell_link customization.font, casein_customization_path(customization) %></td>
			<td class="delete">
				<%= link_to(casein_show_row_icon("trash"), casein_customization_path(customization), :method => :delete, :data => { :confirm => "Are you sure you want to delete this customization?" }) %>
			</td>
		</tr>
	<% end %>
</table>
